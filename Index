      <div class="icon">
        <span class="speed">Plastic waste</span>
      </div>
    </div>

    <script>
      // API URL for Vercel endpoint
      const apiUrl = '/api/ShowSustainability';

      // Fetch the data from Vercel API endpoint
      async function fetchData() {
        try {
          const response = await fetch(apiUrl, { method: 'POST' });
          const data = await response.json();
          document.querySelector('.data-from-sheet').textContent = data.data;
        } catch (error) {
          console.error('Error fetching data:', error);
        }
      }

      // Call the function to fetch data on page load
      fetchData();
    </script>
  </body>
